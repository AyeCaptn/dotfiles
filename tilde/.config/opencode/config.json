{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoshare": false,
  "autoupdate": true,
    "mcp": {
    "shadcn": {
      "type": "local",
      "command": ["npx", "shadcn@latest", "mcp"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "reui": {
      "type": "local",
      "command": ["npx" , "-y", "shadcn@canary", "registry:mcp"],
      "environment": {
        "REGISTRY_URL": "https://reui.io/r/registry.json"
      }
    }
  }
}
